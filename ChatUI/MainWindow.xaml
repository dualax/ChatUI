<Window x:Class="ChatUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatUI"
        xmlns:fa1="http://schemas.fontawesome.io/icons/"
        xmlns:viewModel="clr-namespace:ChatUI.MVVM.Model"
        mc:Ignorable="d"
         Style="{StaticResource MainWindow}">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
             Background="#252525"
             MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Label Content="CHAT"
                       Foreground="Gray"
                       FontWeight="SemiBold"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Style="{StaticResource ButtonHeader}"
                            x:Name="BtnMinimize"
                            Click="BtnMinimize_Click">
                        <fa1:ImageAwesome Icon="WindowMinimize"
                                          Width="14"
                           Foreground="Gray"/>
                    </Button>

                    <Button Style="{StaticResource ButtonHeader}"
                            x:Name="BtnMaximize"
                            Click="BtnMaximize_Click">
                        <fa1:ImageAwesome Icon="WindowMaximize"
                           Foreground="Gray" Height="13" Width="13"/>
                    </Button>

                    <Button Style="{StaticResource ButtonHeader}"
                            x:Name="BtnClose"
                            Click="BtnClose_Click">
                        <fa1:ImageAwesome Icon="WindowClose"
                           Foreground="Gray" Height="11" Width="10"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Background="#2F3136"
      Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Content="Контакты"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="Gray"
                   Margin="8 0 0 0"/>

            <ListView ItemsSource="{Binding Contacts}"
                      SelectedItem="{Binding SelectedContact}"
                      Grid.Row="1"
                      Background="Transparent"
                      BorderThickness="0"
                      ItemContainerStyle="{StaticResource ContactsCard}"/>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Background="#292B2F">
                <Border CornerRadius="25"
                        Width="30"
                        Height="30"
                        Background="Brown"
                        Margin="18 0 0 0"/>
                <StackPanel>
                    <Label Content="Батон"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="0 -5 0 -5"/>
                    <Label Content="Не в сети"
                           Foreground="Gray"
                           FontWeight="SemiBold"
                           FontSize="10"
                           Margin="0 -8 0 -5"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1"
                          Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                            BorderBrush="#2F3136"
                            BorderThickness="0 0 0 2"
                            HorizontalAlignment="Stretch"
                            Margin="8">
                <Grid>
                    <Label Content="Батон брат"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="5 0 5 0"
                                   VerticalAlignment="Center"/>

                    <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <fa1:ImageAwesome Icon="Phone"
                                   Width="20"
                                   Height="20"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Margin="5 0 5 0"
                                   Foreground="White"/>

                        <fa1:ImageAwesome Icon="Camera"
                                   Width="20"
                                   Height="20"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Margin="5 0 5 0"
                                   Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ListView Grid.Row="1"
                              ItemsSource="{Binding SelectedContact.Messages}"
                              Background="Transparent"
                              BorderThickness="0"
                              ItemContainerStyle="{Binding ItemSource }"
                              Margin="8 0 0 0"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Height="50"
                         Text="Сообщение @Имя пользователя"
                         Style="{StaticResource MessageBox}"
                         Grid.ColumnSpan="2"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Grid.Column="1"
                            Margin="0 0 16 0">

                    <fa1:ImageAwesome Icon="Plus"
                                   Width="20"
                                   Height="20"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Foreground="Gray"
                                   Margin="5 5 5 0"/>

                    <fa1:ImageAwesome Icon="Telegram"
                                   Width="20"
                                   Height="20"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Foreground="Gray"
                                   Margin="5 5 16 0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>