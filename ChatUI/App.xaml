<Application x:Class="ChatUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChatUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MainWindowTheme.xaml"/>
                <ResourceDictionary Source="Theme/ButtonHeader.xaml"/>
                <ResourceDictionary Source="Theme/ControlsCardTheme.xaml"/>
                <ResourceDictionary Source="Theme/ChatItemTheme.xaml"/>
                <ResourceDictionary Source="Theme/MessageBoxTheme.xaml"/>
                <ResourceDictionary Source="Theme/ScrollbarTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
